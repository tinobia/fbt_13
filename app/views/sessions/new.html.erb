<% provide :title, t(".login") %>
<div class = "log-in">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-5">
        <div class="form-login">
          <%= form_for :session, url: login_path do |f| %>
            <h4 class = "title"><%= t(".welcome") %></h4>
            <%= f.email_field :email, class: "form-control input-sm chat-input", placeholder: t(".email") %>
            </br>
            <%= f.password_field :password, class: "form-control input-sm chat-input", placeholder: t(".password") %>
            </br>
            <p class = "remmember" >
              <%= f.check_box :remember_me, class: "login-checkbox" %>
              <span class = "login_page" data-toggle="tooltip" data-placement="right"><%= t".rememember_me" %></span>
            </p>
            <div class="wrapper-submit">
              <span class="group-btn">
                <%= f.submit t(".login"), class: "btn btn-primary btn-md" %>
              </span>
            </div>
            <p data-toggle="tooltip" data-placement="bottom">
              <%= link_to t(".sign_up"), signup_path, class: "login_page" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
