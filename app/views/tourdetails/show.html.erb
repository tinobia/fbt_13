<div class="container">
  <h4><%= t ".welcome" %></h4>
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th><%= t "name_tour" %></th>
        <th><%= t "preriod_time" %></th>
        <th><%= t "slot" %></th>
        <th><%= t "price" %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row"><%= @tour.name_tour %></th>
        <td>
          <%= l @tour.starttime, format: :long %>
          <i class = "fa fa-arrow-right"></i>
          <%= l @tour.endtime, format: :long %>
        </td>
        <td><%= @tourdetail.num_of_pass %></td>
        <td><%= @tourdetail.total_price %></td>
      </tr>
    </tbody>
  </table>
  <% if check_time_booking_tour @tourdetail %>
    <button type="button" class="btn btn-danger col-md-offset-10">
      <%= link_to t(".cancel_tour"), tourdetail_path(@tourdetail),
        method: :delete, data: { confirm: t(".confirm") } %>
    </button>
  <% else %>
    <p class = "alert-cancel"><%= t".cant_cancel" %></p>
  <% end %>
</div>
