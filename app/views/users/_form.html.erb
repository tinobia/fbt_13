<%= form_for @user do |f| %>
  <%= render "shared/error_messages" %>

  <%= f.label :name_user %>
  <%= f.text_field :name_user, class: "form-control" %>

  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :tel %>
  <%= f.text_field :tel, class: "form-control" %>

  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <center>
    <%= f.text_field :gender, class: "form-control" %>
    <%= f.label :male, "Male : " %>
    <%= f.radio_button :gender, 0, checked: !@user.gender , class: "form-control gender-radio" %>
    <%= f.label :female, "Female : " %>
    <%= f.radio_button :gender, 1, checked: @user.gender, class: "form-control gender-radio" %>
  </center>

  <%= f.label :address %>
  <%= f.text_field :address, class: "form-control" %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
