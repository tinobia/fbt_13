<%= form_for @tour do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class= "center">
    <%= f.label :name_tour %>
    <%= f.text_field :name_tour, class: "form-control form-add" %>
  </div>

  <div class= "center">
    <%= f.label :content %>
    <%= f.text_field :content, class: "form-control form-add" %>
  </div>
  <div class= "center">
    <%= f.label :picture %>
    <center>
      <%= f.file_field :picture, accept: Settings.picture.type %>
    </center>
  </div>

  <div class= "center">
    <%= f.label :starttime, "Datetime to start: " %>
    <%= f.text_field :starttime, class: "datetimepicker" %>
    <span class="glyphicon glyphicon-calendar"></span>
  </div>

  <div class= "center">
    <%= f.label :endtime, "Datetime to end: " %>
    <%= f.text_field :endtime, class: "datetimepicker" %>
    <span class="glyphicon glyphicon-calendar"></span>
  </div>

  <div class= "center">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control form-add" %>
  </div>

  <div class= "center">
    <%= f.label :category_tour_id %>
    <%= f.text_field :category_tour_id, class: "form-control form-add" %>
  </div>

  <div class= "center">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  </div>
<% end %>

